{
  "name": "postgres-sink-users",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "tasks.max": "1",
    "connection.url": "jdbc:postgresql://postgres:5432/kafka_demo",
    "connection.user": "postgres",
    "connection.password": "postgres",
    "topics": "users",
    "auto.create": "true",
    "auto.evolve": "true",
    "insert.mode": "insert",
    "table.name.format": "users",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "true",
    "pk.mode": "kafka",
    "transforms": "addMetadata",
    "transforms.addMetadata.type": "org.apache.kafka.connect.transforms.InsertField$Value",
    "transforms.addMetadata.timestamp.field": "kafka_timestamp",
    "transforms.addMetadata.offset.field": "kafka_offset",
    "transforms.addMetadata.partition.field": "kafka_partition"
  }
}